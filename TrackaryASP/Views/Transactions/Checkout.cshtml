@model TrackaryASP.Models.Transaction

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Checkout</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (@Session["CartData"] != null) { 
                            foreach (var item in (Session["CartData"] as TrackaryASP.Models.Cart).Products)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(productItem => item.Key.Name)</td>
                                    <td>@Html.DisplayFor(productItem => item.Key.Price)</td>
                                    <td>@Html.DisplayFor(productItem => item.Value)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <label for="select" class="col-lg-2 control-label">Customer (optional)</label>
                <div class="col-lg-10">
                    <select class="form-control" id="select">
                        <option>None</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
            
            @if (@Session["CartData"] != null) { 
                <p id="cart-total">Total: $@((Session["CartData"] as TrackaryASP.Models.Cart).TotalCost)</p>
            }

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <a href="@Url.Action("Index", "Products")" class="btn btn-default">Cancel</a>
                    <input type="submit" value="Checkout" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
