@model TrackaryASP.Models.Transaction

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Details</h2>

    <div>
        <h4>Transaction</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TransactionDateTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TransactionDateTime)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cart.TotalCost)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cart.TotalCost)
            </dd>
        </dl>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart.Products)
                {
                    <tr>
                        <td>@Html.DisplayFor(productItem => item.Key.Name)</td>
                        <td>@Html.DisplayFor(productItem => item.Key.Price)</td>
                        <td>@Html.DisplayFor(productItem => item.Value)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p>
        @Html.ActionLink("Delete", "Delete", new { id = Model.ID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>